<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.youcef.canaryapp.MainActivity">

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/videoView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ToggleButton
        android:text="Toggle 3"
        android:textOn="Look Down"
        android:textOff="Look Up"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tiltBtn"
        android:onClick="tiltBtn"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canary app"
        android:id="@+id/textView"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:text="Toggle 1"
        android:textOn="Lights Off"
        android:textOff="Lights On"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/lightsBtn"
        android:onClick="lightsBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tiltBtn" />

    <ToggleButton
        android:text="Toggle 2"
        android:textOn="Turn Lef"
        android:textOff="Turn Right"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/panBtn"
        android:onClick="panBtn"
        android:layout_alignBaseline="@+id/tiltBtn"
        android:layout_alignBottom="@+id/tiltBtn"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
